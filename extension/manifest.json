{
  "manifest_version": 3,
  "name": "Text Summarizer",
  "version": "1.0",
  "description": "Right-click to summarize selected text.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/summarize?*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
